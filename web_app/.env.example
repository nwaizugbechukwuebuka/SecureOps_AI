# SecureOps AI - Environment Configuration
# Copy this file to .env and customize values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=SecureOps AI
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3010
ALLOWED_ORIGINS=http://localhost:3010,http://localhost:3000,http://127.0.0.1:3010

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./data/secureops.db
DATABASE_ECHO=false

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost/secureops_ai
# For MySQL (production):
# DATABASE_URL=mysql://username:password@localhost/secureops_ai

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration (Change these in production!)
JWT_SECRET_KEY=your-super-secure-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_ROUNDS=12

# Session security
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# Email settings
EMAIL_FROM=noreply@secureops.ai
EMAIL_FROM_NAME=SecureOps AI

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for caching and real-time features
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Session storage
SESSION_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# Celery for background tasks
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Task settings
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_EAGER_PROPAGATES=true
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/secureops.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security logging
SECURITY_LOG_FILE=logs/security.log
AUDIT_LOG_FILE=logs/audit.log

# =============================================================================
# MONITORING & METRICS
# =============================================================================
# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health check
HEALTH_CHECK_INTERVAL=60

# System monitoring
MONITOR_CPU_THRESHOLD=80
MONITOR_MEMORY_THRESHOLD=85
MONITOR_DISK_THRESHOLD=90

# =============================================================================
# SECURITY SCANNING
# =============================================================================
# Vulnerability scanning
VULN_SCAN_ENABLED=true
VULN_SCAN_INTERVAL=86400
VULN_DB_UPDATE_INTERVAL=3600

# Threat intelligence
THREAT_INTEL_ENABLED=true
THREAT_INTEL_API_KEY=your-threat-intel-api-key
THREAT_INTEL_UPDATE_INTERVAL=21600

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================
# AI threat analysis
AI_ENABLED=true
AI_MODEL_PATH=models/threat_detection.pkl
AI_CONFIDENCE_THRESHOLD=0.8

# OpenAI integration (optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# S3 backup (optional)
S3_BACKUP_ENABLED=false
S3_BUCKET=secureops-backups
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email notifications
EMAIL_NOTIFICATIONS=true
EMAIL_CRITICAL_ALERTS=true
EMAIL_DAILY_SUMMARY=true

# Slack integration
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#security-alerts

# Teams integration
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/...

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Authentication rate limiting
AUTH_RATE_LIMIT_PER_MINUTE=10
AUTH_RATE_LIMIT_LOCKOUT_DURATION=300

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# File upload limits
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx,.csv,.json,.xml
UPLOAD_PATH=uploads/

# Virus scanning
VIRUS_SCAN_ENABLED=true
QUARANTINE_PATH=quarantine/

# =============================================================================
# CORS & SECURITY HEADERS
# =============================================================================
# CORS settings
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=false

# Testing
TESTING=false
TEST_DATABASE_URL=sqlite:///./test_secureops.db

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Set these for production deployment

# Production database
# DATABASE_URL=postgresql://secureops:secure_password@db:5432/secureops_ai

# Production security
# JWT_SECRET_KEY=your-production-jwt-secret-minimum-32-characters
# DEBUG=false
# ENVIRONMENT=production

# Production CORS
# ALLOWED_ORIGINS=https://your-domain.com

# Production SSL
# SESSION_COOKIE_SECURE=true
# HSTS_MAX_AGE=63072000

# Production monitoring
# LOG_LEVEL=WARNING
# ENABLE_DEBUG_TOOLBAR=false

# =============================================================================
# CONTAINER SETTINGS
# =============================================================================
# Docker-specific settings
CONTAINER_MODE=false
DOCKER_HOST_IP=host.docker.internal

# Kubernetes settings
K8S_NAMESPACE=secureops
K8S_SERVICE_ACCOUNT=secureops-sa

# =============================================================================
# CUSTOM EXTENSIONS
# =============================================================================
# Plugin system
PLUGINS_ENABLED=true
PLUGINS_PATH=plugins/

# Custom integrations
CUSTOM_INTEGRATIONS_ENABLED=false
INTEGRATIONS_CONFIG_PATH=config/integrations.json

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Connection pooling
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Cache settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Worker settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30