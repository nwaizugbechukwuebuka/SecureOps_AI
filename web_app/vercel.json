{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/main.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "DEBUG": "false",
    "HOST": "0.0.0.0",
    "PORT": "8000",
    "CORS_ORIGINS": "https://nwaizugbechukwuebuka.github.io,https://*.github.io"
  },
  "functions": {
    "backend/main.py": {
      "includeFiles": "backend/**"
    }
  }
}