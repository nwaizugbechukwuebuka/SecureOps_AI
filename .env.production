# ============================================================================
# SecureOps AI - Production Environment Configuration
# ============================================================================
# This file contains all environment variables needed for production deployment
# Copy this file to .env and customize the values for your production environment
# ============================================================================

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_VERSION=1.0.0

# ============================================================================
# SECURITY CONFIGURATION - CHANGE THESE IN PRODUCTION!
# ============================================================================
# Generate secure random keys for production:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=change-me-in-production-with-64-char-random-string
JWT_SECRET_KEY=change-me-in-production-with-64-char-random-string
ENCRYPTION_KEY=change-me-in-production-with-32-char-random-string

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secureops2025
POSTGRES_DB=secureops
POSTGRES_PORT=5432

# Grafana Database (optional - uses PostgreSQL)
GRAFANA_DB=grafana
GRAFANA_DB_USER=grafana
GRAFANA_DB_PASSWORD=grafana2025

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=secureops2025
REDIS_READONLY_PASSWORD=readonly2025
REDIS_MAXMEMORY=512mb
REDIS_PORT=6379

# ============================================================================
# APPLICATION PORTS
# ============================================================================
API_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
FLOWER_PORT=5555
REDIS_COMMANDER_PORT=8081

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# GitHub Integration
GITHUB_TOKEN=

# GitLab Integration
GITLAB_TOKEN=

# Jenkins Integration
JENKINS_URL=
JENKINS_USER=
JENKINS_TOKEN=

# Azure DevOps Integration
AZURE_DEVOPS_TOKEN=
AZURE_DEVOPS_ORG=

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ============================================================================
# SECURITY SCANNER CONFIGURATION
# ============================================================================
SCANNER_TIMEOUT=300
MAX_SCAN_SIZE=100MB

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================
# Sentry Error Tracking
SENTRY_DSN=
FRONTEND_SENTRY_DSN=

# Prometheus Configuration
PROMETHEUS_METRICS=true
PROMETHEUS_RETENTION=30d
PROMETHEUS_RETENTION_SIZE=10GB

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=secureops2025
GRAFANA_SECRET_KEY=change-me-in-production
GRAFANA_DOMAIN=localhost

# Flower Celery Monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=flower2025

# Redis Commander (for debugging only)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=redis2025

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=production
APP_VERSION=1.0.0

# ============================================================================
# NGINX CONFIGURATION
# ============================================================================
NGINX_WORKERS=auto
NGINX_CONNECTIONS=1024

# ============================================================================
# DATA STORAGE PATHS
# ============================================================================
# Local data storage directory (ensure this exists and has proper permissions)
DATA_DIR=./data

# ============================================================================
# PRODUCTION SECURITY NOTES
# ============================================================================
# 1. Change all default passwords and keys before deployment
# 2. Use strong, unique passwords for each service
# 3. Set up proper SSL/TLS certificates for HTTPS
# 4. Configure firewall rules to limit access to internal ports
# 5. Set up proper backup strategies for data volumes
# 6. Monitor logs and set up alerting for security events
# 7. Regularly update container images and dependencies
# 8. Use secrets management for sensitive data in production
# 9. Set up proper log rotation and retention policies
# 10. Configure network security groups and VPC settings
# ============================================================================